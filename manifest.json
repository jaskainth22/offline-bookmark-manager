{
    "manifest_version": 3,
    "name": "Offline Bookmark Manager",
    "version": "1.0",
    "description": "Save web pages for offline reading",
    
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    
    "background": {
        "service_worker": "background/background.js"
    },
    
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Offline Bookmark Manager"
    }
}
